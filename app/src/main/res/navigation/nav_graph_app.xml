<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_app"
    app:startDestination="@id/fragmentSplash">

    <fragment
        android:id="@+id/fragmentSplash"
        android:name="com.example.testmarket.featureSplash.FragmentSplash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_fragmentSplash_to_fragmentTabs"
            app:destination="@id/fragmentTabs"
            app:popUpTo="@id/nav_graph_app"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragmentTabs"
        android:name="com.example.testmarket.featureMenu.FragmentTabs"
        android:label="fragment_tabs"
        tools:layout="@layout/fragment_tabs" />
</navigation>