<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="134dp"
    android:background="@color/dark_blue">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/image_cart"
        android:layout_height="@dimen/image_cart"
        android:layout_marginStart="33dp" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/ic_basket" />

    <FrameLayout
        android:layout_width="26dp"
        android:layout_height="68dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/bg_basket_sum"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/minus"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_minus" />

        <TextView
            android:id="@+id/sum"
            style="@style/ParentText.20SP.White"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="bottom"
            android:background="@color/transparent"
            android:src="@drawable/ic_plus" />
    </FrameLayout>

    <TextView
        android:id="@+id/title"
        style="@style/ParentText.20SP.White"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="138dp" />

    <TextView
        android:id="@+id/price"
        style="@style/ParentText.20SP"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="56dp"
        android:textColor="@color/orange" />

</FrameLayout>