<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="subtitle"
            type="String" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/bestView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hot_height"
        android:layout_marginStart="@dimen/item_hot_margin"
        android:layout_marginEnd="@dimen/item_hot_margin"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="@dimen/item_corner_radius">

        <TextView
            android:id="@+id/viewShapeNew"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_orange_oval"
            android:gravity="center"
            android:text="@string/New"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="invisible"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/IVhot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="140dp" />

        <TextView
            android:id="@+id/tittle"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal|top"
            android:text="@{title}"
            android:textAppearance="@style/ParentText.25SP.White"
            tools:text="Iphone 12" />

        <TextView
            android:id="@+id/TVsubtitle"
            android:layout_width="110dp"
            android:layout_height="13dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="95dp"
            android:text="@{subtitle}"
            android:textAppearance="@style/ParentText.11SP.White"
            tools:text="Súper. Mega. Rápido." />

        <Button
            android:id="@+id/buttonBuyNow"
            style="@style/BuyNowButtonStyle"
            android:layout_marginStart="24dp"
            android:layout_marginTop="140dp"
            android:padding="0dp"
            android:text="@string/buyNow" />

    </androidx.cardview.widget.CardView>
</layout>