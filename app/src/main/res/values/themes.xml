<resources>

    <style name="Theme.TestMarket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <item name="android:statusBarColor">@color/background_gray</item>
    </style>

    <style name="SplashText">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BigOrangeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_big_button</item>
    </style>

    <style name="ParentText">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="ParentText.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ParentText.25SP">
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="ParentText.35SP">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="ParentText.20SP">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="ParentText.18SP">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="ParentText.16SP">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="ParentText.15SP">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="ParentText.12SP">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="ParentText.11SP">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ParentText.16SP.Orange">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="ParentText.12SP.Search">
        <item name="android:textColor">@color/dark_blue_search</item>
    </style>

    <style name="ParentText.25SP.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ParentText.20SP.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ParentText.15SP.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ParentText.13SPWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ParentText.11SP.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ParentText.11SP.GrayDetails">
        <item name="android:textColor">#B7B7B7</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ParentText.20SP.Gray">
        <item name="android:textColor">#80000000</item>
    </style>

    <style name="BuyNowButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">98dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:background">@drawable/bg_dialog_spinner</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FilterDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="bottomSheetStyle">@style/BottomDialog</item>
    </style>

    <style name="BottomDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="colorControlNormal">@color/rating</item>
        <item name="colorControlActivated">@color/rating</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
    </style>
</resources>