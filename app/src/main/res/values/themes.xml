<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestMarket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashText">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="ParentText">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="ParentText.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ParentText.25SP">
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="ParentText.18SP">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="ParentText.16SP">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="ParentText.15SP">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="ParentText.12SP">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="ParentText.11SP">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ParentText.16SP.Orange">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="ParentText.12SP.Orange">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="ParentText.12SP.Search">
        <item name="android:textColor">@color/dark_blue_search</item>
    </style>

    <style name="ParentText.25SP.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ParentText.11SP.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BuyNowButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">98dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:background">@drawable/bg_rectangle_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>